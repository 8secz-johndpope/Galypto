<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/loginGreen</item>
        <item name="colorPrimaryDark">@color/loginGreen</item><!--colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="elevation">0dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="GalleryImageButtonStyle">
        <item name="android:background">@drawable/buttonroundedcorner</item>
        <item name="android:tint">@color/fullWhite</item>
    </style>

    <style name="passwordStyle">
        <item name="android:background">@drawable/passcoderoundedcorner</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColorHint">@color/inputTextHint</item>
        <item name="android:textColor">@color/fullWhite</item>
    </style>

    <style name="ImageSelextedStyle">
        <item name="android:background">@drawable/roundedimage</item>
        <item name="android:shadowColor">@color/black_overlay</item>
        <item name="android:shadowDx">50</item>
        <item name="android:shadowDy">50</item>
        <item name="android:shadowRadius">24</item>
        <item name="android:elevation">7dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:background">@drawable/roundedyellow</item>
    </style>

    <style name="roundedImage">
        <item name="android:background">@drawable/roundedimage</item>
    </style>

    <style name="ActionBarStyle">
        <item name="android:background">@color/loginGreen</item>
    </style>

    <style name="GallerButtonsViewStyle">
        <item name="android:background">@drawable/gallerybuttonsview</item>
    </style>

    <style name="GridStyle">
        <item name="android:background">@drawable/roundedimage</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MediaViewerOptionButtonStyle">
        <item name="android:background">@drawable/vieweroptionbutton</item>
    </style>

    <style name="ViewerButtonsStyle">
        <item name="android:background">@drawable/gradientblack</item>
    </style>

    <style name="VideoButtonStyle">
        <item name="elevation">10dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:width">300dp</item>
        <item name="android:height">300dp</item>
    </style>

</resources>

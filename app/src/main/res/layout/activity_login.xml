<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginGreen"
    tools:context=".Activities.LoginActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="430dp"
        android:layout_height="430dp"
        android:background="@drawable/styledrectangle"
        android:rotation="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="414dp"
        android:layout_height="205dp"
        android:background="@color/fullWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp" />

        <EditText
            android:id="@+id/loginPasscode"
            style="@style/passwordStyle"
            android:layout_width="259dp"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/inserte_contrase_a"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button"
            style="@style/LoginButtonStyle"
            android:layout_width="222dp"
            android:layout_height="41dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/laosangmanmn"
            android:text="@string/loginButton" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/showpass"
            android:fontFamily="@font/laosangmanmn"
            android:textColor="@color/black_overlay" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>